@model Person

<!DOCTYPE html>
<html>
<head>
    <title>Person Details</title>
    <meta charset="utf-8" />
</head>
<body>
    <div>
        <h1>Person Details</h1>
        <h3>@Model.Name</h3>
        <table>
            <tbody>
                <tr>
                    <td>Gender</td>
                    <td>@Model.Gender</td>
                </tr>
                <tr>
                    <td>Date of Birth</td>
                    <td>@Model.DateOfBirth?.ToString()</td>
                </tr>
            </tbody>
        </table>
        <a href="/home">Go back</a>
    </div>
</body>
</html>
